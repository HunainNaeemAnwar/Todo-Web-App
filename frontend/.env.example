# =============================================================================
# Task Management Frontend - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in the values for your environment
# =============================================================================

# =============================================================================
# API Configuration (Required)
# =============================================================================
# Backend API base URL
# Development: http://localhost:8001 (matches backend port)
# Production:  https://api.yourdomain.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:8001

# Better Auth URL (same as API base URL)
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:8001

# Better Auth secret (must match backend)
BETTER_AUTH_SECRET=your-super-secret-jwt-secret-must-be-at-least-32-characters-long

# =============================================================================
# ChatKit Configuration (Required for Phase 3)
# =============================================================================
# ChatKit domain key for local development
NEXT_PUBLIC_CHATKIT_DOMAIN_KEY=local-dev



# =============================================================================
# Application Configuration (Optional)
# =============================================================================
# Application name (default: Task Manager)
# NEXT_PUBLIC_APP_NAME=Task Manager

# Enable/disable development features
# NEXT_PUBLIC_DEV_TOOLS=false

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================
# Enable analytics (Google Analytics, Plausible, etc.)
# NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Analytics ID
# NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable/disable specific features
# NEXT_PUBLIC_ENABLE_DARK_MODE=true
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
